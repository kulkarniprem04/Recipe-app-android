<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".RecipeActivity">

        <Button
            android:id="@+id/backbutton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_back"
            android:fontFamily="@font/quicksand_bold"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
             />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/backbutton"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/image_view_detail"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="30dp"
                    android:background="@drawable/white_bg"
                    android:layout_below="@+id/image_view_detail">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recipe name"
                        android:textSize="30sp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:id="@+id/recipe_name_detail"
                        android:layout_marginStart="16dp"
                        android:textAlignment="center"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/minutes"
                        android:layout_below="@+id/recipe_name_detail"
                        android:layout_centerHorizontal="true"
                        android:text="minutes"
                        android:fontFamily="@font/quicksand_medium"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>

                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/minutes"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/quicksand_medium"
                        android:layout_centerHorizontal="true"
                        android:text="Ingredients"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:id="@+id/recipe_data_detail"
                        />
                    <ListView
                        android:id="@+id/ingredients_list"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_below="@id/recipe_data_detail"
                        android:layout_marginTop="20dp"
                        android:padding="20dp"
                        android:nestedScrollingEnabled="true"
                        />
                    <Button
                        android:id="@+id/recipeurl"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ingredients_list"
                        android:layout_centerHorizontal="true"
                        android:text="Full recipe"
                        android:background="@drawable/rounded_btn"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/calories"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/recipeurl"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:id="@+id/energy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/calories"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/fat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/energy"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/carbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fat"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/fiber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/carbs"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/sugar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fiber"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/protein"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sugar"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/cholesterol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/protein"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/black"/>

                </RelativeLayout>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>