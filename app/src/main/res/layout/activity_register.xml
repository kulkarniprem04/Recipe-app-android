<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <ImageView
        android:id="@+id/searching_logo"
        android:layout_width="222dp"
        android:layout_height="217dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/ic_searchng_user" />
    <EditText
        android:id="@+id/RegisterUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginLeft="30dp"
        android:drawableLeft="@drawable/ic_profile"
        android:scaleType="centerCrop"
        android:hint="Username"
        android:fontFamily="@font/quicksand_medium"
        android:layout_below="@id/searching_logo"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowColor="@color/black"
        />
    <EditText
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="30dp"
        android:drawableLeft="@drawable/ic_email"
        android:scaleType="centerCrop"
        android:hint="E-mail"
        android:paddingTop="10dp"
        android:fontFamily="@font/quicksand_medium"
        android:layout_below="@+id/RegisterUsername"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowColor="@color/black"
        />
    <EditText
        android:id="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginLeft="30dp"
        android:drawableLeft="@drawable/ic_pass"
        android:scaleType="centerCrop"
        android:hint="Password"
        android:paddingTop="10dp"
        android:fontFamily="@font/quicksand_medium"
        android:layout_below="@+id/Email"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowColor="@color/black"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_btn"
        android:text="Register"
        android:fontFamily="@font/quicksand_bold"
        android:layout_below="@+id/Password"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:id="@+id/registerpasswordbtn"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/account"
        android:text="Already have an account? Login."
        android:fontFamily="@font/quicksand_bold"
        android:layout_below="@+id/registerpasswordbtn"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"/>
    <ImageView
        android:layout_width="240dp"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-90dp"
        android:layout_marginBottom="-120dp"
        android:src="@drawable/home_oval" />
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="-100dp"
        android:layout_marginTop="-150dp"
        android:src="@drawable/home_oval" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-130dp"
        android:layout_marginBottom="-150dp"
        android:src="@drawable/home_oval" />
    <ImageView
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="250dp"
    android:layout_marginRight="-140dp"
    android:src="@drawable/home_oval" />


</RelativeLayout>